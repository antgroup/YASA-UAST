{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "allowJs": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*.*"
  ]
}
